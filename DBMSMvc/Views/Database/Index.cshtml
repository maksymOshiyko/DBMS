@model DBMSCore.Models.Database

@{
    ViewBag.Title = "Database";
    Layout = "_Layout";
}

<div>
    <div class="d-flex justify-content-between align-content-center">
        <h3>Tables</h3>
        <a class="btn btn-primary" asp-controller="Tables" asp-action="AddTable">Add table</a>    
    </div>
    <table class="table">
        <thead>
        <tr>
            <td>Name</td>
            <td class="text-end">Actions</td>
        </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < @Model.Tables.Count; i++)
        {
            <tr>
                <td>
                    <a asp-controller="Tables" asp-action="Index" asp-route-tableIndex="@(i)">
                        @Model.Tables[i].Name
                    </a>
                </td>
                <td class="text-end">
                    <a class="btn btn-danger btn-sm" 
                       asp-controller="Tables" asp-action="DeleteTable" asp-route-tableIndex="@(i)">
                        Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>