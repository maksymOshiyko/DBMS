@{
    ViewBag.Title = "Save database";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <h3>Save database</h3>
        <form asp-controller="Database" asp-action="SaveDatabase" method="post">
            <div class="mb-3">
                <label class="form-label" for="path">Path:</label>
                <input id="path" class="form-control" name="path" />
            </div>
            <button type="submit" class="btn btn-primary float-end">Save</button>
        </form>
    </div>
</div>